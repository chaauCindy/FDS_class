        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title jQuery Swipe 플러그인
        style.
            body {
            height: 100vh;
            margin: 0;
            background: #101010;
            }
            .touchzone {
            position: absolute;
            top: 20%;
            right: 20%;
            left: 20%;
            bottom: 20%;
            padding-top: 1.5em;
            padding-left: 1.5em;
            border-radius: 10px;
            background: #2f2f2f;
            color: #fff;
            font-size: 22px;
            font-weight: 100;
            }
            .touchzone ul {
            margin: 0;
            padding-left: 0;
            list-style: none;
            }
    body
        .touchzone
            ul
                li
                    | Type: 
                    strong.type Inital
                li
                    | Direction: 
                    strong.direction Inital
                li
                    | Distance X: 
                    strong.x 0
                li
                    | Distance Y: 
                    strong.y 0
